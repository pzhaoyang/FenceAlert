<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
                <TextView  
           android:id="@+id/tv_oldpasword"  
           android:layout_width="wrap_content"  
           android:layout_height="wrap_content"  
           android:layout_marginLeft="12dip"  
           android:layout_marginTop="10dip"  
           android:text="请输入老密码:"  
           android:textColor="#000000"  
           android:textSize="18sp"
           />
     <EditText  
           android:id="@+id/et_oldpassword"  
           android:layout_width="fill_parent"  
           android:layout_height="wrap_content"  
          android:layout_below="@id/tv_oldpasword"  
           android:layout_marginLeft="12dip"  
            android:layout_marginRight="10dip"  
          android:maxLines="200"  
           android:password="true"  
           />  
            <TextView  
           android:id="@+id/tv_newpasword"  
           android:layout_width="wrap_content"  
           android:layout_height="wrap_content"  
           android:layout_below="@id/et_oldpassword"  
           android:layout_marginLeft="12dip"  
           android:layout_marginTop="10dip"  
           android:text="请输入新密码:"  
           android:textColor="#000000"  
           android:textSize="18sp"
           />
     <EditText  
           android:id="@+id/et_newpassword"  
           android:layout_width="fill_parent"  
           android:layout_height="wrap_content"  
          android:layout_below="@id/tv_newpasword"  
           android:layout_marginLeft="12dip"  
            android:layout_marginRight="10dip"  
          android:maxLines="200"  
           android:password="true"  
           />  
          <TextView  
           android:id="@+id/tv_newagainpasword"  
           android:layout_width="wrap_content"  
           android:layout_height="wrap_content"  
           android:layout_below="@id/et_newpassword"  
           android:layout_marginLeft="12dip"  
           android:layout_marginTop="10dip"  
           android:text="请再次输入新密码:"  
           android:textColor="#000000"  
           android:textSize="18sp"
           />
     <EditText  
           android:id="@+id/et_newagainpassword"  
           android:layout_width="fill_parent"  
           android:layout_height="wrap_content"  
          android:layout_below="@id/tv_newagainpasword"  
           android:layout_marginLeft="12dip"  
            android:layout_marginRight="10dip"  
          android:maxLines="200"  
           android:password="true"  
           />  
           <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/save_password_button"
        />  
   
</LinearLayout>
